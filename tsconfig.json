{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@devs/*": ["packages/*/src"],
      "@devs/core/persistence": ["packages/core/src/persistence/index.d.ts","packages/core/src/persistence/index.ts"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": ["packages/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
