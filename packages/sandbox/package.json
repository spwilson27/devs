{
  "name": "@devs/sandbox",
  "version": "0.1.0",
  "private": true,
  "description": "Isolated execution abstraction for shell commands and file I/O.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "engines": { "node": ">=22" },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "bootstrap-sandbox": "node scripts/bootstrap-sandbox.mjs",
    "test": "vitest run",
    "test:integration": "RUN_INTEGRATION=true vitest -t @integration",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests --ext .ts",
    "typecheck": "tsc --noEmit",
    "type:test": "tsd",
    "build:base-image": "docker build -t devs-sandbox-base:latest ./docker/base",
    "push:base-image": "docker tag devs-sandbox-base:latest ghcr.io/devs-project/sandbox-base:latest && docker push ghcr.io/devs-project/sandbox-base:latest",
    "verify:security": "ts-node scripts/verify-security-config.ts",
    "validate-all": "node scripts/validate-all.mjs"
  },

  "peerDependencies": {
    "@devs/core": "workspace:*",
    "@webcontainer/api": "^1.2.0"
  },
  "peerDependenciesMeta": {
    "@webcontainer/api": { "optional": true }
  },
  "dependencies": {
    "dockerode": "^4.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "@vitest/coverage-v8": "^1.0.0",
    "zod": "^3.21.4",
    "tsd": "^0.27.0",
    "@types/dockerode": "^3.3.0"
  }
}
