{
    "_comment": "RAG source configuration. Each source may provide `dir` (legacy) or `dirs` (array of path patterns). Use '**' for recursive globs or trailing '/' for non-recursive.",
    "skip_dirs": [
        ".git",
        "target",
        "node_modules",
        ".venv",
        "dist",
        "__pycache__"
    ],
    "sources": [
        {
            "dirs": ["../docs/**", "../.agent/**"],
            "extensions": [
                ".md"
            ],
            "label": "docs"
        },
        {
            "dirs": ["../*", "../src/**", "../packages/**"],
            "extensions": [
                ".md", ".py", ".ts", ".tsx", ".js", ".jsx", ".yaml", ".json"
            ],
            "label": "src"
        }
    ]
}